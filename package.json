{
  "name": "opencode-plugin-preload-skills",
  "version": "1.8.0",
  "description": "Smart skill loading for OpenCode â€” automatic, contextual, and budget-aware",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:injection": "vitest run evals/injection.test.ts",
    "eval": "tsx evals/run.ts",
    "eval:quick": "tsx evals/run.ts --retries 1 --configs 'baseline,systemPrompt (full)'",
    "eval:full": "tsx evals/run.ts --output evals/report.md",
    "eval:advanced": "tsx evals/run.ts --advanced --retries 5",
    "eval:hard": "tsx evals/run.ts --advanced --filter hard --retries 5",
    "eval:variance": "tsx evals/run.ts --retries 10 --output evals/variance-report.md",
    "eval:complete": "tsx evals/run.ts --advanced --retries 5 --output evals/complete-report.md",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "skills",
    "preload",
    "agent",
    "context",
    "ai",
    "llm",
    "automation"
  ],
  "author": "juhas96",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/juhas96/opencode-plugin-preload-skills.git"
  },
  "bugs": {
    "url": "https://github.com/juhas96/opencode-plugin-preload-skills/issues"
  },
  "homepage": "https://github.com/juhas96/opencode-plugin-preload-skills#readme",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=1.0.0"
  },
  "devDependencies": {
    "@opencode-ai/plugin": "^1.0.85",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
